<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to "← Back to Learn", learn_path(level: @kanji.rate, type: @kanji_type), 
          class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors" %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Kanji Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Kanji Card -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <!-- Header -->
          <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8 text-center">
            <div class="text-8xl font-bold mb-4"><%= @kanji.kanji %></div>
            <div class="flex justify-center items-center space-x-4">
              <span class="inline-flex px-4 py-2 text-lg font-medium rounded-full bg-green-100 text-green-600 bg-opacity-20">
                <%= @kanji.rate %>
              </span>
              <span class="inline-flex px-4 py-2 text-lg font-medium rounded-full bg-yellow-100 text-yellow-600 bg-opacity-20 capitalize">
                <%= @kanji_type %> Kanji
              </span>
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-8">
            <!-- Meaning -->
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-gray-800 mb-3">Meaning</h3>
              <p class="text-xl text-gray-700"><%= @kanji.meaning_id %></p>
            </div>
            
            <!-- Readings -->
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-gray-800 mb-3">
                <%= @kanji_type == 'single' ? 'Readings' : 'Reading' %>
              </h3>
              <% if @kanji_type == 'single' %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <% if @kanji.onyomi.present? %>
                    <div class="bg-blue-50 rounded-lg p-4">
                      <h4 class="text-lg font-semibold text-blue-800 mb-2">Onyomi (音読み)</h4>
                      <p class="text-blue-700 text-xl"><%= @kanji.onyomi %></p>
                      <p class="text-sm text-blue-600 mt-1">Chinese reading</p>
                    </div>
                  <% end %>
                  <% if @kanji.kunyomi.present? %>
                    <div class="bg-green-50 rounded-lg p-4">
                      <h4 class="text-lg font-semibold text-green-800 mb-2">Kunyomi (訓読み)</h4>
                      <p class="text-green-700 text-xl"><%= @kanji.kunyomi %></p>
                      <p class="text-sm text-green-600 mt-1">Japanese reading</p>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="bg-purple-50 rounded-lg p-4">
                  <p class="text-purple-700 text-xl"><%= @kanji.reading %></p>
                  <p class="text-sm text-purple-600 mt-1">Compound reading</p>
                </div>
              <% end %>
            </div>
            
            <!-- Description -->
            <% if @kanji.description_id.present? %>
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-gray-800 mb-3">Description</h3>
                <div class="bg-gray-50 rounded-lg p-6">
                  <p class="text-gray-700 leading-relaxed"><%= @kanji.description_id %></p>
                </div>
              </div>
            <% end %>
            
            <!-- Practice Buttons -->
            <div class="border-t pt-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">Practice This Kanji</h3>
              <div class="flex space-x-4">
                <%= link_to "Practice Single", quiz_single_path(@kanji.rate), 
                    class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
                <%= link_to "Practice Multiple", quiz_multiple_path(@kanji.rate), 
                    class: "px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-medium" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- User Progress (if logged in) -->
        <% if user_signed_in? && @user_stats %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Your Progress</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Attempts:</span>
                <span class="font-bold text-blue-600"><%= @user_stats[:total_attempts] %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Correct:</span>
                <span class="font-bold text-green-600"><%= @user_stats[:correct_attempts] %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Accuracy:</span>
                <span class="font-bold text-purple-600"><%= @user_stats[:accuracy] %>%</span>
              </div>
            </div>
            
            <% if @user_stats[:total_attempts] > 0 %>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div class="bg-gradient-to-r from-green-500 to-blue-500 h-3 rounded-full transition-all duration-300" 
                       style="width: <%= @user_stats[:accuracy] %>%"></div>
                </div>
              </div>
            <% end %>
            
            <!-- Recent Attempts -->
            <% if @user_attempts.any? %>
              <div class="mt-6 pt-6 border-t">
                <h4 class="text-lg font-semibold text-gray-800 mb-3">Recent Attempts</h4>
                <div class="space-y-2">
                  <% @user_attempts.each do |attempt| %>
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-gray-600"><%= time_ago_in_words(attempt.answered_at) %> ago</span>
                      <span class="inline-flex px-2 py-1 rounded-full text-xs font-medium <%= attempt.correct? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= attempt.correct? ? 'Correct' : 'Wrong' %>
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        
        <!-- Similar Kanji -->
        <% if @similar_kanjis.any? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Similar <%= @kanji.rate %> Kanji</h3>
            <div class="grid grid-cols-2 gap-3">
              <% @similar_kanjis.each do |similar_kanji| %>
                <%= link_to learn_show_path(@kanji_type, similar_kanji.id), 
                    class: "block bg-gray-50 hover:bg-gray-100 rounded-lg p-4 text-center transition-colors" do %>
                  <div class="text-3xl font-bold text-gray-800 mb-2"><%= similar_kanji.kanji %></div>
                  <div class="text-xs text-gray-600"><%= truncate(similar_kanji.meaning_id, length: 20) %></div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h3 class="text-xl font-bold text-gray-800 mb-4">Quick Actions</h3>
          <div class="space-y-3">
            <%= link_to "Browse All #{@kanji.rate}", learn_path(level: @kanji.rate, type: @kanji_type), 
                class: "block w-full bg-gray-600 text-white text-center py-2 rounded-lg hover:bg-gray-700 transition-colors" %>
            <%= link_to "Take #{@kanji.rate} Exam", exam_path, 
                class: "block w-full bg-indigo-600 text-white text-center py-2 rounded-lg hover:bg-indigo-700 transition-colors" %>
            <%= link_to "Random Quiz", quiz_path, 
                class: "block w-full bg-green-600 text-white text-center py-2 rounded-lg hover:bg-green-700 transition-colors" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
