<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-50 to-pink-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-purple-100">
        <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        <%= t('auth.password_edit.title') %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= t('auth.password_edit.subtitle') %>
      </p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true, class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="py-2">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <%= t('auth.password_edit.new_password_label') %>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500"><%= t('auth.register.password_minimum_length', count: @minimum_password_length) %></span>
            <% end %>
          <% end %>
          <%= f.password_field :password, 
              autofocus: true, 
              autocomplete: "new-password",
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.password_edit.new_password_placeholder') %>
        </div>

        <div class="py-2">
          <%= f.label :password_confirmation, t('auth.password_edit.confirm_password_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.password_edit.confirm_password_placeholder') %>
        </div>

        <div class="pt-4">
          <%= f.submit t('auth.password_edit.submit_button'), 
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition duration-200 ease-in-out transform hover:scale-105" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
