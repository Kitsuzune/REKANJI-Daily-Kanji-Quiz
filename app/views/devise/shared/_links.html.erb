<div class="text-center space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('auth.links.sign_in'), new_session_path(resource_name), 
        class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium transition duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('auth.links.sign_up'), new_registration_path(resource_name), 
        class: "text-green-600 hover:text-green-800 text-sm font-medium transition duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="pt-2 border-t border-gray-200">
      <%= link_to t('auth.links.forgot_password'), new_password_path(resource_name), 
          class: "text-gray-600 hover:text-gray-800 text-sm transition duration-200" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to t('auth.links.no_confirmation'), new_confirmation_path(resource_name), 
          class: "text-gray-600 hover:text-gray-800 text-sm transition duration-200" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to t('auth.links.no_unlock'), new_unlock_path(resource_name), 
          class: "text-gray-600 hover:text-gray-800 text-sm transition duration-200" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="pt-4 border-t border-gray-200">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Masuk dengan #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
            data: { turbo: false }, 
            class: "w-full mb-2 py-2 px-4 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200" %>
      <% end %>
    </div>
  <% end %>
</div>
