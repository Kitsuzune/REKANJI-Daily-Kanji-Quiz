<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-slate-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gray-100">
        <svg class="h-8 w-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
        </svg>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        <%= t('auth.unlock.title') %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= t('auth.unlock.subtitle') %>
      </p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, local: true, class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, t('auth.unlock.email_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.unlock.email_placeholder') %>
        </div>

        <div>
          <%= f.submit t('auth.unlock.submit_button'), 
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-200 ease-in-out transform hover:scale-105" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
