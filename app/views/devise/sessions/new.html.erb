<div class="flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8 border-4 border-indigo-200 rounded-xl shadow-lg">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-indigo-100">
        <span class="text-2xl font-bold text-indigo-600">æ¼¢</span>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        <%= t('auth.login.title') %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= t('auth.login.subtitle') %>
      </p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6") do |f| %>
        <div class="py-2">
          <%= f.label :email, t('auth.login.email_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.login.email_placeholder') %>
        </div>

        <div class="py-2">
          <%= f.label :password, t('auth.login.password_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.login.password_placeholder') %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center py-2">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, t('auth.login.remember_me'), class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

        <div>
          <%= f.submit t('auth.login.submit_button'), 
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out transform hover:scale-105" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
