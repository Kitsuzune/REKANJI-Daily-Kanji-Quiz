<div class="text-center mb-8 md:mb-12 px-4">
  <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 mb-4">Choose Your Practice Mode</h1>
  <p class="text-lg md:text-xl text-gray-600">Select how you want to practice Japanese kanji</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-8 md:mb-12 px-4">
  <% @levels.each do |level| %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-blue-600 text-white text-center py-3 md:py-4">
        <h4 class="text-xl md:text-2xl font-bold">
          <span class="inline-flex px-3 py-1 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium <%= level == 'N5' ? 'bg-green-500' : level == 'N4' ? 'bg-yellow-500' : 'bg-red-500' %>">
            <%= level %>
          </span>
        </h4>
      </div>
      <div class="p-4 md:p-6 text-center">
        <div class="mb-4">
          <div class="text-lg md:text-xl font-bold text-gray-800">Single Kanji</div>
          <div class="text-2xl md:text-3xl font-bold text-blue-600 mb-2"><%= @kanji_single_counts[level] %></div>
          <p class="text-sm md:text-base text-gray-600 mb-3">kanji available</p>
          <%= link_to "Practice Single", quiz_single_path(level), 
              class: "block w-full bg-blue-600 text-white py-2 md:py-3 px-3 md:px-4 rounded-lg hover:bg-blue-700 transition-colors font-medium text-sm md:text-base mb-2" %>
        </div>
        
        <div class="border-t pt-4">
          <div class="text-lg md:text-xl font-bold text-gray-800">Multiple Kanji</div>
          <div class="text-2xl md:text-3xl font-bold text-purple-600 mb-2"><%= @kanji_multiple_counts[level] %></div>
          <p class="text-sm md:text-base text-gray-600 mb-3">jyukugo available</p>
          <%= link_to "Practice Multiple", quiz_multiple_path(level), 
              class: "block w-full bg-purple-600 text-white py-2 md:py-3 px-3 md:px-4 rounded-lg hover:bg-purple-700 transition-colors font-medium text-sm md:text-base" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
