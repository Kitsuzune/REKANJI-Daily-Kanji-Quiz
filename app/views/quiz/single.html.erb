<% if @kanji %>
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-cyan-600 text-white text-center py-6">
        <h4 class="text-2xl font-bold flex items-center justify-center space-x-4">
          <span class="inline-flex px-4 py-2 rounded-full text-sm font-medium <%= @level == 'N5' ? 'bg-green-500' : @level == 'N4' ? 'bg-yellow-500' : 'bg-red-500' %>">
            <%= @level %>
          </span>
          <span>Single Mode</span>
        </h4>
      </div>
      <div class="p-8">
        <div class="text-center mb-8">
          <div class="text-8xl font-bold text-gray-800 mb-4 kanji-character"><%= @kanji.character %></div>
          <p class="text-2xl text-gray-700 mb-2">What does this kanji mean?</p>
          <p class="text-lg text-gray-500">Reading: <%= @kanji.reading %></p>
        </div>
        
        <%= form_with url: quiz_answer_path, method: :post, class: "quiz-form" do |form| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
            <% @options.each_with_index do |option, index| %>
              <label class="quiz-option cursor-pointer p-6 rounded-lg border-2 border-gray-200 hover:border-cyan-400 hover:bg-cyan-50 transition-all duration-200 transform hover:-translate-y-1 hover:shadow-md">
                <%= form.radio_button :answer, option, 
                    class: "sr-only", 
                    id: "option_#{index}",
                    required: true %>
                <span class="block text-lg font-semibold text-center"><%= option %></span>
              </label>
            <% end %>
          </div>
          
          <div class="text-center space-x-4">
            <%= form.submit "Submit Answer", class: "bg-green-600 text-white px-8 py-4 rounded-lg hover:bg-green-700 transition-colors font-bold text-lg" %>
            <%= link_to "Back to Quiz Menu", quiz_path, class: "bg-gray-500 text-white px-8 py-4 rounded-lg hover:bg-gray-600 transition-colors font-bold text-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const radioButtons = document.querySelectorAll('input[type="radio"]');
      const labels = document.querySelectorAll('.quiz-option');
      
      radioButtons.forEach((radio, index) => {
        radio.addEventListener('change', function() {
          labels.forEach(label => {
            label.classList.remove('border-cyan-600', 'bg-cyan-100');
            label.classList.add('border-gray-200');
          });
          if (this.checked) {
            labels[index].classList.remove('border-gray-200');
            labels[index].classList.add('border-cyan-600', 'bg-cyan-100');
          }
        });
      });
    });
  </script>

<% else %>
  <div class="max-w-2xl mx-auto text-center">
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-8">
      <div class="text-6xl mb-4">⚠️</div>
      <h4 class="text-2xl font-bold text-yellow-800 mb-4">No Kanji Available</h4>
      <p class="text-yellow-700 mb-6">There are no kanji available for this level at the moment.</p>
      <%= link_to "Back to Quiz Menu", quiz_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
    </div>
  </div>
<% end %>
