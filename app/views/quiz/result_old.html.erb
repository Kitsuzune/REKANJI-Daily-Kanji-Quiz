<% if @result %>
  <!-- Debug info (remove in production) -->
  <div class="alert alert-info small mb-3">
    <strong>Debug:</strong> 
    Symbol key: <%= @result[:is_correct].inspect %> | 
    String key: <%= @result["is_correct"].inspect %> | 
    Helper result: <%= result_is_correct?(@result) %>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header <%= result_is_correct?(@result) ? 'bg-success' : 'bg-danger' %> text-white text-center">
          <h4 class="mb-0">
            <%= result_is_correct?(@result) ? '🎉 Correct!' : '❌ Incorrect' %>
          </h4>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <div class="kanji-character"><%= @result["kanji"] %></div>
            
            <div class="row mt-4">
              <div class="col-md-6">
                <div class="card <%= result_is_correct?(@result) ? 'border-success' : 'border-danger' %>">
                  <div class="card-body">
                    <h6 class="card-title">Correct Answer</h6>
                    <p class="card-text fw-bold text-success"><%= @result["meaning"] %></p>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card border-info">
                  <div class="card-body">
                    <h6 class="card-title">Your Answer</h6>
                    <p class="card-text fw-bold <%= result_is_correct?(@result) ? 'text-success' : 'text-danger' %>">
                      <%= @result["selected"] %>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-md-12">
                <div class="card border-secondary">
                  <div class="card-body">
                    <h6 class="card-title">Reading</h6>
                    <p class="card-text"><%= @result["reading"] %></p>
                    <% if @result["level"] %>
                      <span class="level-badge level-<%= @result["level"].downcase %>"><%= @result["level"] %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="text-center mt-4">
            <% if session[:quiz_mode] == 'single' %>
              <%= link_to "Try Another #{session[:current_level]}", 
                  quiz_single_path(session[:current_level]), 
                  class: "btn btn-primary btn-lg btn-custom me-2" %>
            <% elsif session[:quiz_mode] == 'mixed' %>
              <%= link_to "Try Another Mixed", quiz_mixed_path, 
                  class: "btn btn-warning btn-lg btn-custom me-2" %>
            <% else %>
              <%= link_to "Continue Practice", 
                  quiz_practice_path(session[:current_level]), 
                  class: "btn btn-primary btn-lg btn-custom me-2" %>
            <% end %>
            
            <%= link_to "Back to Quiz Menu", quiz_path, 
                class: "btn btn-secondary btn-custom me-2" %>
            <%= link_to "Home", root_path, 
                class: "btn btn-outline-secondary btn-custom" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning text-center">
    <h4>No Result Available</h4>
    <p>Please complete a quiz first.</p>
    <%= link_to "Start Quiz", quiz_path, class: "btn btn-primary" %>
  </div>
<% end %>
